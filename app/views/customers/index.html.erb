<div class="big-image">
    <div class="overlay">
            <h3 class="font-alt">Tell us about your project!</h3>
                <h4 id="about-form" class="container sub-header"> Share a preview of your requirements using the form below and a Margevity expert shall contact you shortly.</h4>
            <%= form_for (@customer), :html => { :class =>'sign-up-form' } do |f| %>
                <%= f.text_field :first_name, :required => true, placeholder: "First Name", class: 'label' %>
                <%= f.text_field :last_name, placeholder: "Last Name", class: 'label' %>
                <%= f.email_field :email, :required => true, placeholder: "Email", class: 'label' %>
                <%= f.text_area :your_business, :required => true, placeholder: "Tell us about your business", class: 'label large-box' %>
                <%= f.text_area :looking_for, :required => true, placeholder: "What services are you looking for?", class: 'label large-box' %>
                <%= f.submit "Submit", data: { confirm: "Submitting..." },class: "simple", id: "simple" %>
            <% end %>
        <%= link_to "Go Back", root_path, class: "btn btn-ghost", id: 'go-back' %>
    </div>
</div>