<% if cookies[:saved_subscriber] %>
    Thanks for Signing Up!
<% else %>
    <h3 class="font-alt">Contact Us!</h3>
    <%= form_for @customer, :html => { :class =>'sign-up-form' } do |f| %>
        <%= f.text_field :first_name, placeholder: "First Name", class: 'label' %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: 'label' %>
        <%= f.email_field :email, placeholder: "Email", class: 'label' %>
        <%= f.text_field :your_business, placeholder: "Tell us about your business", class: 'label' %>
        <%= f.text_field :looking_for, placeholder: "What services are you looking for?", class: 'label' %>
        <%= f.submit "Submit", class: "btn btn-ghost" %>
    <% end %>
<% end  %>
<%= link_to "Go Back", root_path, class: "btn btn-ghost", id: 'go-back' %>